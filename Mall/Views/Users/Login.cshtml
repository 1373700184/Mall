
@{
    Layout = null;
}

<!DOCTYPE html>
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body style="background-color:cornflowerblue;">
    <form action="/Users/Login">
        <div>
            <div style="margin-left:35%;width:30%; align-content:center">
                <input class="form-control" style="min-width:250px;margin-bottom:15px;width:100%" type="text" id="user" name="user" placeholder="请输入用户名或ID" />
                <input type="text" class="form-control layui-input-block" style="min-width:250px;" id="pwd" name="pwd" placeholder="密码" />
                <input type="checkbox" style="" name="remember" id="remember">记住密码
                <input class="form-control btn-block" style="min-width:250px;" id="loginbtn" value="登录" type="submit">
                <div style="margin-left:125px"><a href="#"><p>注册</p></a></div>
                <p class="marz10">@ViewBag.Error</p>

            </div>
        </div>
    </form>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
